@{
    ViewData["Title"] = "Unauthorized Access";
}

<div class="container mt-5 text-center">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg border-danger">
                <div class="card-header bg-danger text-white">
                    <h3><i class="bi bi-shield-lock-fill"></i> Access Denied</h3>
                </div>
                <div class="card-body">
                    <p class="lead">You are not authorized to access this page.</p>
                    <p>If you believe this is an error, please contact support or try logging in again.</p>
                    <a href="/Account/Login" class="btn btn-primary mt-3">
                        <i class="bi bi-box-arrow-in-right"></i> Go to Login
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
